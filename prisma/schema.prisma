// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int       @default(autoincrement()) @id
  title     String
  author    String
  content   String
  date      DateTime  @default(now())
  published Boolean
}

model GuestBook {
  id        Int       @default(autoincrement()) @id
  author    String
  ip        String
  content   String  
  date      DateTime  @default(now())
  hidden    Boolean
}